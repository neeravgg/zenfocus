{
    "compilerOptions": {
        "lib": [
            "es5"
        ],
        "types": [
            "node",
            "jest"
        ],
        "module": "NodeNext",
        "target": "es5",
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "NodeNext",
        "emitDeclarationOnly": true,
        "noEmit": false
    },
    "include": [
        "./server.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}