{
    "compilerOptions": {
        "lib": [
            "es5"
        ],
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "module": "CommonJS",
        "target": "es5",
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        // "emitDeclarationOnly": true,  // Commented out or set to false
        "noEmit": false
    },
    "include": [
        "./server.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}