{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "target": "esnext", // Set the JavaScript target version
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ], // Include necessary libraries
        "types": [
            "node"
        ],
        "outDir": "dist", // Output compiled JavaScript to the 'dist' directory
        "rootDir": "./", // Specify the root directory for TypeScript files
        "declaration": true, // Generate type declaration files
        "sourceMap": true // Generate source maps for debugging
    },
    "include": [
        "./**/*"
    ],
}