{
    "compilerOptions": {
        "lib": [
            "es6",
            "dom"
        ],
        // "types": [
        //     "node",
        //     "jest"
        // ],
        // "typeRoots": [
        //     "./node_modules/@types"
        // ],
        "module": "CommonJS",
        "target": "es6",
        "outDir": "./dist",
        "rootDir": ".",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        // "emitDeclarationOnly": true,  // Commented out or set to false
        "noEmit": false
    },
    "include": [
        "./server.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}